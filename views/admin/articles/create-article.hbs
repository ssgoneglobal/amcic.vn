<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0 font-size-18">Create news</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Create news</li>
        </ol>
      </div>

    </div>
  </div>
</div>
<div class="modal fade" id="ignismyModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-body">

        <div class="thank-you-pop">
          <img src="/assets/logos/Green-Round-Tick.png" alt="logon" />
          <h1 class="text-center">Success!</h1>
        </div>

      </div>

    </div>
  </div>
</div>
<!-- end page title -->
<form class="needs-validation add-product-form" novalidate="" action="/admin/news" method="POST"
  enctype="multipart/form-data">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Info</h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="example-text-input" class="form-label" required="required">Title</label>
                <input class="form-control" type="text" name="title">
              </div>
              <div class="mb-3">
                <label for="example-text-input" class="form-label">Sub Title</label>
                <input class="form-control" type="text" name="subTitle" required="required">
              </div>
              <input type="hidden" name="status" id="s"></input>
              <div class="mb-3">
                <label class="form-label">Select Category</label>
                <select class="form-select" name="category">
                  {{#each categories}}
                  <option selected value="{{this._id}}">{{this.title}}</option>
                  {{/each}}
                </select>
              </div>
                <div class="mb-3">
                    <label class="form-label">Select Language</label>
                    <select class="form-select" name="lan">
                        {{#each languages}}
                            <option value="{{this}}" >{{this}}</option>
                        {{/each}}

                    </select>
                </div>
              <div class="mb-3">
                <label for="example-text-input" class="form-label">Source:</label>
                <input class="form-control" type="text" name="source">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <label for="example-text-input" class="form-label">Thumbnail</label>
              <div>
                {{!-- <form class="dropzone" id="myForm">
                  <div class="fallback"> --}}
                    <input name="image" id="thum" type="file">
                    {{!--
                  </div>
                  <div class="dz-message needsclick">
                    <div class="d-flex justify-content-center">
                      <label for="thum" role="button">
                        <div class="mb-3 d-flex justify-content-center">
                          <i class="display-4 text-muted bx bx-cloud-upload"></i>
                        </div>
                        <h5 class="text-center">Drop files here or click to upload.</h5>
                      </label>
                    </div>
                  </div> --}}
                  {{!--
                </form> --}}
              </div>
            </div> <!-- end col -->
            <div class="col">
              <label class="mr-4">This article is featured?</label>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="featured" id="featured1" value="true"
                >
                <label class="form-check-label" for="featured1">Yes</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="featured" id="featured2" value="false"
                  checked>
                <label class="form-check-label" for="featured2">No</label>
              </div>
            </div>
          </div> <!-- end row -->
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Content</h4>
        </div>
        <div class="card-body">
          <textarea id="ckeditor-classic" name="content"></textarea>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <button class="btn btn-light" style="margin-right: 5px;" id="create1">Save and hidden</button>
        <button class="btn btn-primary" id="create2">Save and publish</button>
      </div>
    </div>
</form>
<!-- end col -->
</div>

