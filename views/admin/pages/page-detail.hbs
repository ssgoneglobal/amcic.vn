<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Info</h4>
      </div>
      <div class="card-body">
        <div class="row">
          <p style="display:none" id="slug">{{staticPage.slug}}</p>
          <div class="col-md-12">
            <div class="mb-3">
              <label for="example-text-input" class="form-label">Name</label>
              <input class="form-control" type="text"
              value="{{staticPage.title}}"
               id="name">
            </div>
           <div class="mb-3">
              <label for="example-text-input" class="form-label">Title</label>
              <input class="form-control" type="text"
              value="{{staticPage.title}}"
               id="title">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Content</h4>
      </div>
      <div class="card-body">
        <textarea id="ckeditor-classic"></textarea>
      </div>
    </div>
    <div class="d-flex justify-content-end">
    <button class="btn btn-primary" id="update">Update</button>
     <button type="button" class="btn btn-danger waves-effect waves-light ml-2"
      style="margin-left: 5px;"
       data-bs-toggle="modal"
        data-bs-target="#myModal">Update Status</button>
      <!-- sample modal content -->
      <div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true"
        data-bs-scroll="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="myModalLabel">Update status page</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="formRadios" value="1" id="formRadios1">
                <label class="form-check-label" for="formRadios1">
                  Publish
                </label>
                </div>
                <div class="form-check mb-3">
                 <input class="form-check-input" type="radio" name="formRadios" value="0" id="formRadios2">
                <label class="form-check-label" for="formRadios2">
                  Draff
                </label>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary waves-effect" data-bs-dismiss="modal">Close</button>
              <button type="button" id="status" class="btn btn-danger waves-effect waves-light">Update</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<p style="display:none" id="con">{{staticPage.content}}</p>

