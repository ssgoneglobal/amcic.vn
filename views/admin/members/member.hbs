                        <input
                          type="text"
                          id="twitter"
                          name="twitter"
                          class="form-control"
                        />
                      </div>
                    </div>

                  </div>

                  <div class="form-group">
                    <button class="btn btn-primary">Create</button>
                  </div>
                </form>
              </div>
            </div><!-- /.modal-content -->
